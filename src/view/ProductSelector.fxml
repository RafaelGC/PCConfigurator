<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="486.0" prefWidth="619.0" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="controller.ProductSelectorController">
  <children>
    <Label text="Selecciona un producto">
      <font>
        <Font size="36.0" />
      </font>
    </Label>
    <HBox prefHeight="-1.0" prefWidth="200.0" VBox.vgrow="NEVER">
      <children>
        <Label text="Buscar">
          <HBox.margin>
            <Insets right="20.0" fx:id="x1" />
          </HBox.margin>
        </Label>
        <TextField fx:id="searchTextfield" prefWidth="200.0" />
      </children>
    </HBox>
    <TableView fx:id="productTable" maxHeight="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
      <columns>
        <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="271.0" text="Descripción" fx:id="descriptionColumn" />
        <TableColumn prefWidth="75.0" text="Precio" fx:id="priceColumn" />
        <TableColumn prefWidth="75.0" text="Stock" fx:id="stockColumn" />
        <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="138.0" text="Categoría" fx:id="categoryColumn" />
      </columns>
    </TableView>
    <HBox prefHeight="-1.0" prefWidth="200.0">
      <children>
        <Label text="Cantidad">
          <font>
            <Font size="16.0" />
          </font>
          <HBox.margin>
            <Insets right="20.0" fx:id="x1" />
          </HBox.margin>
        </Label>
        <TextField id="searchTextfield" fx:id="amountTextfield" prefWidth="200.0" text="1" />
      </children>
    </HBox>
    <HBox alignment="BOTTOM_RIGHT" prefHeight="-1.0" prefWidth="200.0" VBox.vgrow="NEVER">
      <children>
        <Button mnemonicParsing="false" onAction="#reject" text="Cancelar">
          <HBox.margin>
            <Insets right="10.0" />
          </HBox.margin>
        </Button>
        <Button mnemonicParsing="false" onAction="#accept" text="Aceptar" />
      </children>
    </HBox>
  </children>
  <padding>
    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
  </padding>
</VBox>
